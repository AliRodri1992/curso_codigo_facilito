<h1> <%= name %> Artículo </h1>
<%= form_for(@article) do |f| %>
  <% @article.errors.full_messages.each do |error_message| %>
    <div class="be-red white top-space">
      <%= error_message %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title, 'Titulo' %>:
    <%= f.text_field :title, placeholder: 'Ingresar Titulo', class:"form-control"%>
  </div>
  <div class="field">
    <%= f.label :cover, 'Portada' %>:
    <%= f.file_field :cover %>
  </div>
  <div class="field">
    <%= f.label :category, 'Categoria' %>:
    <% @categories.each do |category| %>
      <div class="field">
        <%= check_box_tag 'categories[]', category.id %> <%= category.name %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :body, 'Comentario' %>:
    <%= f.text_area :body, placeholder: 'Ingresar Artículo', style:'height:250px;', class:'form-control' %>
  </div>
  <div class="field">
    <%= f.submit 'Guardar Artículo', class: 'btn be-blue white' %>
  </div>
<% end %>