<h1 class="actions">
  <%= @article.title%>
</h1>
<% unless @article.user.nil? %>
  <p class="actions">
    Escrito por: <%= @article.user.nickname %>
  </p>
<% end %>
<p class="actions">
  Visitas: <%= @article.visits_count%>
</p>
<div>
  <%= @article.body%>
</div>
<div class="field">

  <h3 class="actions">Comentarios</h3>
  <ul id= 'comments-box'>
    <% @article.comments.each do |comment| %>
      <li id= "comment">
        <%= comment.body %> - <%= comment.user.nickname %>
      </li>
    <% end %>
  </ul>
  <%= render 'comments/form' %>
</div>
<div class="actions">
  <%= link_to 'Editar', edit_article_path(@article), class: 'btn be-blue white' %>
  <%= link_to 'Regresar', articles_path, class: 'btn be-blue white' %>
</div>